<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Button"/>

    <style name="Button.Text" parent="Button">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Button.Text.Normal">
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Button.Text.Caps">
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="Button.Text.Normal.Accent">
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/accent</item>
    </style>

    <style name="Button.Text.Normal.Accent.NotActive">
        <item name="android:textColor">@color/gray</item>
        <item name="android:backgroundTint">@color/accent_50</item>
    </style>

    <style name="Widget.App.CheckBox.UserAgreement" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="buttonTint">@color/cb_user_agreement</item>
        <item name="android:background">@drawable/bg_shape_radius_4</item>
    </style>

    <style name="progressBarWhite" parent="@style/Theme.AppCompat">
        <item name="colorAccent">@color/white</item>
    </style>

    <style name="Button.Text.Enabled" parent="Button.Text">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/accent</item>
    </style>

    <style name="Button.Text.NotEnabled" parent="Button.Text">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/accent</item>
    </style>

    <!-- Text style -->

    <!-- Font style -->
    <style name="TextStyle"/>

    <style name="TextStyle.Header1" parent="TextStyle">
        <item name="fontFamily">@font/rubik_medium</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextStyle.Header2" parent="TextStyle">
        <item name="fontFamily">@font/rubik_medium</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextStyle.Header3" parent="TextStyle">
        <item name="fontFamily">@font/rubik_medium</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="TextStyle.SecondarySmall" parent="TextStyle">
        <item name="fontFamily">@font/nunito_semibold</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextStyle.SecondaryBig" parent="TextStyle">
        <item name="fontFamily">@font/nunito_semibold</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextStyle.Normal" parent="TextStyle">
        <item name="fontFamily">@font/nunito_regular</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- Text Color style -->

    <style name="TextStyle.Normal.Red">
        <item name="android:textColor">@color/red</item>
    </style>

    <style name="TextStyle.Normal.Black">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextStyle.Normal.Blue">
        <item name="android:textColor">@color/accent</item>
    </style>

    <style name="TextStyle.Normal.Gray">
        <item name="android:textColor">@color/gray_font</item>
    </style>

    <style name="TextStyle.Header2.Black">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextStyle.Header2.Blue">
        <item name="android:textColor">@color/accent</item>
    </style>

    <style name="TextStyle.SecondarySmall.Red">
        <item name="android:textColor">@color/red</item>
    </style>

    <style name="CustomBottomSheetDialog" parent="@style/ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheet</item>
    </style>

    <style name="CustomBottomSheet" parent="Widget.MaterialComponents.BottomSheet">
        <item name="shapeAppearanceOverlay">@style/CustomShapeAppearanceBottomSheetDialog</item>
    </style>

    <style name="CustomShapeAppearanceBottomSheetDialog" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <style name="ShapeAppearanceOverlay.MyApp.Button.Circle" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">100%</item>
    </style>

    <style name="CornerSize50Percent" parent="">
        <item name="cornerSize">50%</item>
    </style>

</resources>