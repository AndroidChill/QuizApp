    <style name="Button"/>
    <style name="Button.Text" parent="Button">
        <item name="android:textSize">16sp</item>
    </style>
    <style name="Button.Text.Caps">
        <item name="android:textAllCaps">true</item>
    </style>
    <style name="Button.Text.Enabled" parent="Button.Text">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/accent</item>
    </style>
    <style name="Button.Text.Normal">
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="Button.Text.Normal.Accent">
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/accent</item>
    </style>
    <style name="Button.Text.Normal.Accent.NotActive">
        <item name="android:textColor">@color/gray</item>
        <item name="android:backgroundTint">@color/accent_50</item>
    </style>
    <style name="Button.Text.NotEnabled" parent="Button.Text">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/accent</item>
    </style>
    <style name="CornerSize50Percent" parent="">
        <item name="cornerSize">50%</item>
    </style>
    <style name="CustomBottomSheet" parent="Widget.MaterialComponents.BottomSheet">
        <item name="shapeAppearanceOverlay">@style/CustomShapeAppearanceBottomSheetDialog</item>
    </style>
    <style name="CustomBottomSheetDialog" parent="@style/ThemeOverlay.MaterialComponents.BottomSheetDialog">
